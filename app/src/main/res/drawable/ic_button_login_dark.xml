<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
                android:shape="rectangle">
            <corners
                    android:radius="10dp"/>
            <size
                    android:height="4dp"
                    android:width="8dp"/>
            <solid
                    android:color="#d8d8d8"/>
        </shape>
    </item>
    <item
            android:right="1px"
            android:bottom="1px">
        <shape
                android:shape="rectangle">
            <corners
                    android:radius="10dp"/>
            <size
                    android:height="4dp"
                    android:width="8dp"/>
            <solid
                    android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
</layer-list>