<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <info.abdolahi.CircularMusicProgressBar
            app:border_color="@color/colorPrimary"
            app:progress_color="@color/colorPrimary"
            app:progress_startAngle="360"
            app:srcCompat="@drawable/ic_user"
            android:layout_width="200dp" android:layout_height="200dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/user_fragment_id_userimage"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_fragment_id_fullname" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/user_fragment_id_userimage"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" android:textSize="24sp" tools:text="User"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_fragment_id_groups"
            app:layout_constraintTop_toBottomOf="@+id/user_fragment_id_fullname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" tools:text="XI TKJ 1"/>
    <androidx.cardview.widget.CardView
            android:id="@+id/user_fragment_id_cardlogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/user_fragment_id_groups" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="50dp">
        <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/user_fragment_id_imglogout"
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/ic_logout"/>
            <TextView
                    android:layout_toRightOf="@id/user_fragment_id_imglogout"
                    android:text="Logout"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="18sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>