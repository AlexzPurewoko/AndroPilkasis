<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/oauthlogin_id_username"
            android:layout_marginEnd="@dimen/oauthlogin_dimen_username_marginELSR"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/oauthlogin_dimen_username_marginELSR"
            android:layout_marginStart="@dimen/oauthlogin_dimen_username_marginELSR"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/oauthlogin_dimen_username_marginELSR"
            android:layout_marginTop="@dimen/oauthlogin_dimen_username_marginTop"
            android:singleLine="true"
            android:hint="Username"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/oauthlogin_id_password"
            app:layout_constraintStart_toStartOf="@+id/oauthlogin_id_username"
            app:layout_constraintEnd_toEndOf="@+id/oauthlogin_id_username"
            android:layout_marginTop="@dimen/oauthlogin_dimen_password_marginTop"
            app:layout_constraintTop_toBottomOf="@+id/oauthlogin_id_username"/>
    <Button
            android:text="Login"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_button_login"
            android:id="@+id/oauthlogin_id_submit_login"
            android:layout_marginTop="@dimen/oauthlogin_dimen_loginbtn_marginTop"
            app:layout_constraintTop_toBottomOf="@+id/oauthlogin_id_password"
            app:layout_constraintStart_toStartOf="@+id/oauthlogin_id_password"
            app:layout_constraintEnd_toEndOf="@+id/oauthlogin_id_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>