<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/adapter_id_showstatus_layout"
        app:cardUseCompatPadding="true"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                tools:text=":("
                android:id="@+id/adapter_id_showstatus_emotetext"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="42sp"
                android:layout_width="60dp" android:layout_height="60dp"/>

        <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/adapter_id_showstatus_description"
                tools:text="Yahhh...\nKamu belum memilih calon satupun"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_toRightOf="@id/adapter_id_showstatus_emotetext"
                android:layout_toEndOf="@id/adapter_id_showstatus_emotetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="15dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>